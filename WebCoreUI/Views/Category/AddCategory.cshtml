@model CategoryVM 
@{
    ViewData["Title"] = "AddCategory";
}

<h1>AddCategory</h1>

@TempData["message"]

<form asp-action="AddCategory" asp-controller="Category" method="post">
    <div>
        <input type="text" asp-for="Category.CategoryName" placeholder="Kategori İsmi" />
    </div>

    <div>
        <input type="text" asp-for="Category.Description" placeholder="Açıklaması" />
    </div>

    <div>
        <button class="btn btn-dark">Ekle</button>
    </div>
</form>
